<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/scalableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_base_height="1417"
        app:scale_base_width="800">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:background="#B0D8D7"
            app:scale_height="650"
            app:scale_width="800"
            app:srcCompat="@drawable/bird" />

        <EditText
            android:id="@+id/email_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:background="@drawable/loginaround"
            android:hint="abcdefg@mail.com"
            android:paddingStart="20dp"
            app:scale_textsize="40"
            app:scale_top="750"
            app:scale_left="45"
            app:scale_height="100"
            app:scale_width="700"/>

        <EditText
            android:id="@+id/password_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/loginaround"
            android:hint="비밀번호"
            android:paddingStart="20dp"
            app:scale_textsize="40"
            app:scale_top="920"
            app:scale_left="45"
            app:scale_height="100"
            app:scale_width="700"/>

        <Button
            android:id="@+id/login_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:background="@drawable/loginaround"
            android:backgroundTint="#B0D8D7"
            app:scale_textsize="33"
            app:scale_top="1100"
            app:scale_left="45"
            app:scale_height="100"
            app:scale_width="700"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>