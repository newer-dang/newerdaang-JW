<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7EBEA"
    android:orientation="vertical"

    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="#D7EBEA">

        <ImageButton
            android:id="@+id/bird_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_"
            android:onClick="back">
        </ImageButton>

    </androidx.appcompat.widget.Toolbar>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/scalableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        app:scale_base_height="110"
        app:scale_base_width="800">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/around"
            android:hint="검색어 입력"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textColorHint="#000000"
            app:scale_height="110"
            app:scale_left="25"
            app:scale_textsize="40"
            app:scale_width="750"
            tools:ignore="MissingPrefix" />

        <ImageButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_icon1"
            android:text="Button"
            app:scale_height="90"
            app:scale_left="660"
            app:scale_top="20"
            app:scale_width="80" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wordRe"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-3dp"
            android:background="@drawable/recy"
            android:orientation="vertical"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constrainedHeight="true"
            tools:listitem="@layout/item" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />


    </LinearLayout>


</LinearLayout>